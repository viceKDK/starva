root = true

# Global settings
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# React Native specific
[*.{ts,tsx}]
indent_style = space
indent_size = 2

# Import organization
typescript_sort_imports = true
typescript_separate_import_groups = true

# Naming preferences - TypeScript/React Native
typescript_naming_convention_private_field = camelCase_with_underscore
typescript_naming_convention_public_member = camelCase
typescript_naming_convention_interface = PascalCase_with_I_prefix
typescript_naming_convention_component = PascalCase
typescript_naming_convention_hook = camelCase_with_use_prefix
typescript_naming_convention_constant = SCREAMING_SNAKE_CASE

# React Native specific formatting
react_native_new_line_before_brace = true
react_native_component_max_lines = 200
react_native_function_max_lines = 50
react_native_file_max_lines = 500

# Expression and pattern preferences
typescript_prefer_interface_over_type = true
typescript_prefer_const_assertions = true
typescript_prefer_readonly_arrays = true
typescript_prefer_template_literals = true

# File organization rules
file_max_lines = 500
file_split_threshold = 450
class_max_lines = 200
function_max_lines = 50
parameter_max_count = 4

# Clean Code enforcement
enforce_meaningful_names = true
avoid_magic_numbers = true
avoid_deep_nesting = true
max_nesting_depth = 3
avoid_long_parameter_lists = true

# Architecture rules
separate_ui_and_business_logic = true
use_dependency_injection = true
favor_composition_over_inheritance = true
use_result_pattern_for_errors = true

# Code analysis severities
typescript_analyzer_style_severity = suggestion
typescript_analyzer_design_severity = suggestion
typescript_analyzer_maintainability_severity = suggestion