{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/domain/*": [
        "src/domain/*"
      ],
      "@/application/*": [
        "src/application/*"
      ],
      "@/infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@/presentation/*": [
        "src/presentation/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**"
  ]
}
