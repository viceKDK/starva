{
  "expo": {
    "name": "WaterMinder Personal",
    "slug": "waterminder-personal",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#F8FFFE"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.yourname.waterminder-personal",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "UIBackgroundModes": ["background-processing"],
        "NSUserNotificationUsageDescription": "This app uses notifications to remind you to drink water throughout the day."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#F8FFFE"
      },
      "package": "com.yourname.waterminderpersonal",
      "versionCode": 1,
      "permissions": [
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE",
        "com.android.alarm.permission.SET_ALARM"
      ],
      "useNextNotificationsApi": true
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-notifications",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0"
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": false
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}